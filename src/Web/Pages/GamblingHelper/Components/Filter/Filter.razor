<div class="container">
    <div class="row gx-5">
        <div class="col">
            <label for="gem-search">Gem to corrupt</label>
            <div class="input-group">
                <input type="text" class="form-control" style="text-align: left" aria-label="Gem Search"
                       aria-describedby="reset-1" id="gem-search" value="@FilterModel.Gem"
                       @onchange="UpdateGemSearchText">
                <button class="btn btn-primary btn-addon" type="button" id="reset-1" @onclick="@ResetGemSearch">
                    <img src="icons/x-mark.svg" alt="" style="width: 1rem"/>
                </button>
            </div>
        </div>
        <div class="col">
            <label for="temple-cost">
                <a href="@TempleTradeUrl()" target="_blank" rel="noopener noreferrer" style="color: inherit">
                    Temple cost
                </a>
            </label>
            <div class="input-group">
                <MathInput class="form-control"
                           aria-label="Temple Cost"
                           aria-describedby="reset-2"
                           id="temple-cost"
                           value="@TempleCostString()"
                           ValueChanged="UpdateTempleCost"/>
                <button class="btn btn-primary btn-addon" type="button" id="reset-2" @onclick="@ResetTempleCost">
                    <img src="icons/arrow-rotate-right.svg" alt="" style="width: 1rem"/>
                </button>
            </div>
        </div>
        <div class="col">
            <label for="chaos-per-currency">@CurrencyName()</label>
            <div class="input-group">
                <MathInput class="form-control"
                           aria-label="Chaos per Currency"
                           aria-describedby="reset-3"
                           id="chaos-per-currency"
                           disabled="@IsChaosSelected"
                           value="@CurrencyValueString()"
                           ValueChanged="UpdateCurrencyValueChanged"/>
                <button class="btn btn-primary btn-addon" type="button" id="reset-3" @onclick="@ResetCurrencyValue"
                        disabled="@IsChaosSelected">
                    <img src="icons/arrow-rotate-right.svg" alt="" style="width: 1rem"/>
                </button>
            </div>
        </div>
        <div class="col">
            <label for="currency">Currency</label>
            <div class="dropdown w-100">
                <button class="btn btn-primary dropdown-toggle w-100 d-flex justify-content-between align-items-center"
                        type="button" data-bs-toggle="dropdown" aria-expanded="false" id="currency">
                    @if (FilterModel.Currency is not null)
                    {
                        <p class="ms-0">
                            <img src="@FilterModel.Currency.Icon" alt="Currency-Icon"/>
                            @FilterModel.Currency.Name
                        </p>
                    }
                    else
                    {
                        <p>Nothing selected</p>
                    }
                </button>
                <ul class="dropdown-menu">
                    @foreach (var currency in GetAllowedFilterCurrencies())
                    {
                        <li>
                            <a class="dropdown-item" @onclick="() => UpdateCurrency(currency.Id)">
                                <img src="@currency.Icon" alt="Currency-Icon"/> @currency.Name
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="row collapse mt-2 gx-5" id="collapsable">
        <div class="col">
            <label>Cost</label>
            <div class="card">
                <div class="card-body p-2">
                    <div class="d-flex flex-row input-group">
                        <label class="ps-3 w-50" for="price-per-try-from">From</label>
                        <label for="price-per-try-to">To</label>
                    </div>
                    <div class="d-flex flex-row input-group">
                        <MathInput class="form-control"
                                   aria-label="PricePerTry From"
                                   aria-describedby="reset-4"
                                   id="price-per-try-from"
                                   value="@CurrencyValue(FilterModel.PricePerTryFrom)"
                                   ValueChanged="UpdatePricePerTryFrom"/>
                        <MathInput class="form-control input-addon"
                                   aria-label="PricePerTry To"
                                   aria-describedby="reset-4"
                                   id="price-per-try-to"
                                   value="@CurrencyValue(FilterModel.PricePerTryTo)"
                                   ValueChanged="UpdatePricePerTryTo"/>
                        <button class="btn btn-primary btn-addon" type="button" id="reset-4"
                                @onclick="@ResetCostFilter">
                            <img src="icons/x-mark.svg" alt="" style="width: 1rem"/>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col input-group flex-column">
            <div class="d-flex flex-column w-100">
                <label for="gem-type">Gem Type</label>
                <div class="dropdown w-100">
                    <button
                        class="btn btn-primary dropdown-toggle w-100 d-flex justify-content-between align-items-center"
                        type="button" data-bs-toggle="dropdown" aria-expanded="false" id="gem-type">
                        @FilterModel.GemType.ToPrettyString()
                    </button>
                    <ul class="dropdown-menu">
                        @foreach (var gemType in GemTypes())
                        {
                            <li>
                                <a class="dropdown-item" @onclick="() => UpdateGemType(gemType)">
                                    @gemType.ToPrettyString()
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="w-100 mt-2 d-flex justify-content-between">
                <div class="form-check ps-0 m-0 w-100 d-flex justify-content-end">
                    <input class="form-check-input" type="checkbox" id="onlyProfitable"
                           checked="@FilterModel.OnlyShowProfitable" @onchange="UpdateOnlyShowProfitable">
                    <label class="form-check-label" for="onlyProfitable">
                        Only Profitable
                    </label>
                </div>
            </div>
        </div>
        <div class="col input-group d-flex flex-column">
            <label for="sorting">Sorting</label>
            <div class="dropdown w-100">
                <button class="btn btn-primary dropdown-toggle w-100 d-flex justify-content-between align-items-center"
                        type="button"
                        data-bs-toggle="dropdown"
                        aria-expanded="false"
                        id="sorting">
                    @FilterModel.Sort.ToPrettyString()
                </button>
                <ul class="dropdown-menu">
                    @foreach (var sort in Sorts())
                    {
                        <li>
                            <a class="dropdown-item" @onclick="() => UpdateSort(sort)">
                                @sort.ToPrettyString()
                            </a>
                        </li>
                    }
                </ul>
            </div>
            <label for="sorting">League</label>
            <div class="dropdown w-100">
                <button class="btn btn-primary dropdown-toggle w-100 d-flex justify-content-between align-items-center"
                        type="button"
                        data-bs-toggle="dropdown"
                        aria-expanded="false"
                        id="league">
                    @FilterModel.League
                </button>
                <ul class="dropdown-menu">
                    @foreach (var league in _leagues)
                    {
                        <li>
                            <a class="dropdown-item" @onclick="() => UpdateLeague(league)">
                                @league
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="row mt-3 mb-3 pointer"
         @onclick="@ToggleFilters"
         data-bs-toggle="collapse"
         data-bs-target="#collapsable"
         aria-expanded="false"
         aria-controls="collapsable">
        <hr class="col align-self-center m-0"/>
        <div class="angles angles-@(FiltersExpanded ? "up" : "down")"></div>
        <p class="col text-center">@(FiltersExpanded ? "Collapse" : "Expand")</p>
        <div class="angles angles-@(FiltersExpanded ? "up" : "down")"></div>
        <hr class="col align-self-center m-0"/>
    </div>
</div>