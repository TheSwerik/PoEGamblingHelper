@page "/stats"
<Navbar></Navbar>
<h3>Stats</h3>

<div class="btn-group" role="group" aria-label="Basic radio toggle button group">
    <input type="radio" class="btn-check" name="btnradio" id="my-account" autocomplete="off" checked @onchange="@(() => _isMyAccountSelected = true)">
    <label class="btn btn-outline-primary" for="my-account">My Account</label>

    <input type="radio" class="btn-check" name="btnradio" id="global" autocomplete="off" @onchange="@(() => _isMyAccountSelected = false)">
    <label class="btn btn-outline-primary" for="global">Global</label>
</div>

<div class="d-flex flex-column align-items-center w-100">
    <h1>
        You have <i style="color: var(--bs-secondary)">@LuckAdjective()</i> @(LuckScore() > 0.9 ? "" : "luck").
    </h1>
    <p>
        Your Luck-Score is <i style="color: var(--bs-secondary)">@LuckScore().Percent()</i>.
    </p>
    <p>
        Your Luck-Rank is <i style="color: var(--bs-secondary)">679120</i>.
    </p>
    <p>
        You made <i style="color: var(--bs-secondary)">420 Divines</i> profit total.
    </p>

    <Chart Data="_data"></Chart>
</div>