@using PoEGamblingHelper.Web.Services.Interfaces
@implements IDisposable

@code {

    [Inject] private IScrollInfoService ScrollInfoService { get; set; } = null!;

    [Parameter] public Func<object?, int, Task> OnScrollToBottom { get; set; } = null!;

    protected override void OnInitialized() { ScrollInfoService.OnScrollToBottom += OnScrollToBottom; }
    public void Dispose() { ScrollInfoService.OnScrollToBottom -= OnScrollToBottom; }
}