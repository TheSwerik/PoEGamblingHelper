@page "/"

<PageTitle>PoE Gambling Helper</PageTitle>

<div class="d-flex flex-column align-items-center w-100 h-100">
    <h2>Path of Exile</h2>
    <h1>GAMBLING HELPER</h1>

    <Filter/>

    <div class="container d-flex flex-wrap p-0 justify-content-between">
        @foreach (var gem in _gems.OrderByDescending(gemData => gemData.AvgProfitPerTry(0)))
        {
            <GemStats GemData="gem" TempleCost="0"/>
        }
    </div>
</div>